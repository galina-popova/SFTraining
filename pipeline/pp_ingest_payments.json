{
	"name": "pp_ingest_payments",
	"properties": {
		"activities": [
			{
				"name": "get_params",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"dataset": {
						"referenceName": "ds_param_json",
						"type": "DatasetReference"
					}
				}
			},
			{
				"name": "Ingest Payments",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "get_params",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"modifiedDatetimeStart": {
								"value": "@pipeline().parameters.windowStart",
								"type": "Expression"
							},
							"modifiedDatetimeEnd": {
								"value": "@pipeline().parameters.windowEnd",
								"type": "Expression"
							},
							"wildcardFileName": {
								"value": "*.json",
								"type": "Expression"
							},
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "AzureSqlSink",
						"writeBehavior": "insert",
						"sqlWriterUseTableLock": false
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['PaymentId']"
								},
								"sink": {
									"name": "PaymentId",
									"type": "Int32"
								}
							},
							{
								"source": {
									"path": "$['PaymentIdentifier']"
								},
								"sink": {
									"name": "PaymentIdentifier",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['UniqueCustomerNumber']"
								},
								"sink": {
									"name": "UniqueCustomerNumber",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['BankStatusName']"
								}
							},
							{
								"source": {
									"path": "$['PaymentStatusName']"
								},
								"sink": {
									"name": "PaymentStatusName",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['PaymentAmount']"
								},
								"sink": {
									"name": "PaymentAmount",
									"type": "Decimal"
								}
							},
							{
								"source": {
									"path": "$['PaymentDate']"
								},
								"sink": {
									"name": "PaymentDate",
									"type": "DateTime"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "ds_src_payments",
						"type": "DatasetReference",
						"parameters": {
							"paymentsContainer": {
								"value": "@activity('get_params').output.firstRow.PaymentContainer",
								"type": "Expression"
							},
							"paymentsRootFolder": {
								"value": "@activity('get_params').output.firstRow.PaymentRootFolder",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "ds_ingestion_payments",
						"type": "DatasetReference",
						"parameters": {
							"schemaName": {
								"value": "@activity('get_params').output.firstRow.SchemaName",
								"type": "Expression"
							},
							"tableName": {
								"value": "@activity('get_params').output.firstRow.IngestionTableName",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"windowStart": {
				"type": "string"
			},
			"windowEnd": {
				"type": "string"
			}
		},
		"annotations": []
	}
}